<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <title>Client Update</title>
  </head>
  <body>
    <div class="container">
      @{
        if(Model != null)
        {
          <h1>Client: @Model["client"].GetName()</h1>
          <div class="row">
            <div class="col-sm-6">
              <form action="/Client/Update/@Model["client"].GetId()" method="post">
                <h2>Enter a Client Name: </h2>
                <input type="text" name="name" value="@Model["client"].GetName()">
                <h2>Select a Stylist</h2>
                <select name="stylist">
                  @foreach(var item in Model["stylist"])
                  {
                    <option value="@item.GetId()">@item.GetName()</option>
                  }
                </select>
                <h2>Enter the clients next appointment:</h2>
                <input type="date" name="date" value="@Model["client"].GetDateTime()">
                <h2>Enter Client Phone Number:</h2>
                <input type="text" name="phone" value="@Model["client"].GetPhone()">                
                <h2>Enter Client Phone Email:</h2>
                <input type="text" name="email" value="@Model["client"].GetEmail()">
                <button type="Submit" name="button">Submit</button>
              </form>
            </div>
            <div class="col-sm-6">
              <h2>Properties:</h2>
              <h3>Name: @Model["client"].GetName()</h3>
              <h3>Stylist: @Model["client"].GetStylistId()</h3>
              <h3>Appointment: @Model["client"].GetDateTime()</h3>
              <h3>Phone: @Model["client"].GetPhone()</h3>
              <h3>Email: @Model["client"].GetEmail()</h3>
            </div>
          </div>
        }
      }
    </div>
  </body>
</html>
