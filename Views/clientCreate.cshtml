<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <title>Client Create</title>
  </head>
  <body>
    <div class="container">
      @{
        if(Model != null)
        {
          <form action="/Client" method="post">
            <h2>Enter a Client Name: </h2>
            <input type="text" name="name">
            <h2>Assign a Stylist</h2>
            <select name="stylist">
              @foreach(var item in Model)
              {
                <option value="@item.GetId()">@item.GetName()</option>
              }
            </select>
            <h2>Enter When The Client's next appointment is:</h2>
            <input type="date" name="date">
            <h2>Enter Client Phone Number:</h2>
            <input type="text" name="phone">
            <h2>Enter Client Email Number:</h2>
            <input type="text" name="email">
            <button type="Submit" name="button">Submit</button>
          </form>
        }
        else
        {
          <h2>Please Enter a Cuisine to Continue</h2>
          <a href="/Cuisine/Create">Click Here to Create a Cuisine</a>
        }
      }
    </div>
  </body>
</html>
