<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <title>Stylist Update</title>
  </head>
  <body>
    <div class="container">
      <a href="/">Return Home</a><br>
      @{
        if(Model!=null)
        {
          <h1>Stylist: @Model["stylist"].GetName()</h1>
          <form class="" action="/Stylist/Update/@Model["stylist"].GetId()" method="post">
            <input type="text" name="name">
            <button type="Submit" name="button">Update Stylist Name</button>
          </form>
          <h2>All clients of @Model["stylist"].GetName():</h2>
          foreach(var item in Model["clients"])
          {
            <h3>@item.GetName()</h3>
          }
        }
      }
    </div>
  </body>
</html>
