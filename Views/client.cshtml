<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <title>Create a Client</title>
  </head>
  <body>
    <div class="container">
      <a href="/">Return Home</a><br>
      <a href="/Client/Create">Add a New Client</a><br>
      <a href="/Client/Delete">Delete All Clients</a>
      <h2>List of All Clients:</h2>
      @{
        if(Model!=null)
        {
          if(Model is string)
          {
            <h3>Successfully Deleted All Clients</h3>
          }
          else if (Model.Count == 0)
          {
            <h3>Please Add a Client</h3>
          }
          else
          {
            foreach(var item in Model)
            {
              <h3><a href="/Client/@item.GetId()">@item.GetName()</a></h3>
              <h5><a href="/Client/Delete/@item.GetId()">Delete</a></h5>
            }
          }
        }
      }
    </div>
  </body>
</html>
